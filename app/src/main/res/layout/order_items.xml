<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/orderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text=""
        />
    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:text=""/>
    <ImageView
        android:id="@+id/imageViewPc"
        android:layout_below="@+id/orderName"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="5dp"
        android:src="@drawable/ic_launcher_background"/>
    <TextView
        android:id="@+id/textViewPc"
        android:layout_toEndOf="@id/imageViewPc"
        android:layout_alignTop="@id/imageViewPc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text=""
        android:textColor="#131313"/>
    <ImageView
        android:id="@+id/imageViewKeyboard"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/textViewPc"
        android:layout_toEndOf="@id/imageViewPc"
        android:padding="5dp"
        android:src="@drawable/ic_launcher_background"/>
    <TextView
        android:id="@+id/textViewKeyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageViewKeyboard"
        android:layout_below="@id/textViewPc"
        android:layout_marginTop="5dp"
        android:text=""/>
    <ImageView
        android:id="@+id/imageViewMouse"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/textViewKeyboard"
        android:layout_toEndOf="@id/imageViewPc"
        android:padding="5dp"
        android:src="@drawable/ic_launcher_background"/>
    <TextView
        android:id="@+id/textViewMouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageViewKeyboard"
        android:layout_below="@id/textViewKeyboard"
        android:layout_marginTop="5dp"
        android:text=""/>
    <ImageView
        android:id="@+id/imageViewMonitor"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/textViewMouse"
        android:layout_toEndOf="@id/imageViewPc"
        android:padding="5dp"
        android:src="@drawable/ic_launcher_background"/>
    <TextView
        android:id="@+id/textViewMonitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageViewKeyboard"
        android:layout_below="@id/textViewMouse"
        android:layout_marginTop="5dp"
        android:text=""/>
    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/textViewMouse"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textViewPrice"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:text="@string/price"/>
    <TextView
        android:id="@+id/textViewAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewPc"
        android:text="@string/amount"
        android:padding="5dp"
        />
</RelativeLayout>